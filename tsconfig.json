{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~navigation": ["./App/navigation"],
      "~navigation/*": ["./App/navigation/*"],
      "~views": ["./App/views"],
      "~views/*": ["./App/views/*"],
      "~components": ["./App/components"],
      "~components/*": ["./App/components/*"],
      "~theme": ["./App/theme"],
      "~theme/*": ["./App/theme/*"],
      "~application": ["./App/application"],
      "~application/*": ["./App/application/*"],
      "~assets": ["./App/assets"],
      "~assets/*": ["./App/assets/*"],
      "~utils": ["./App/utils"],
      "~utils/*": ["./App/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
